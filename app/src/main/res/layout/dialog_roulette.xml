<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/round_button"
    android:padding="16dp">

    <!-- Closing X Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|top"
        android:src="@drawable/xbutton"
        android:contentDescription="Back"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />

    <!-- Sector No. Input + Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/minusButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_minus"
            android:background="@android:color/transparent" />

        <!-- Sector Input -->
        <TextView
            android:id="@+id/sectorCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:padding="8dp"
            android:textSize="30sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Confirm Button -->
        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_plus"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Sectors Layout -->
    <LinearLayout
        android:id="@+id/sectorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" />

    <!-- ConstraintLayout containing the Spinner Wheel and elements -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"> <!-- Ensure height is match_parent to take full space -->

        <!-- Spinner Wheel -->
        <com.example.kaistmap.SpinnerWheelView
            android:id="@+id/spinnerWheel"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Target Arrow -->
        <ImageView
            android:id="@+id/targetArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/target_arrow"
            app:layout_constraintBottom_toTopOf="@id/spinnerWheel"
            app:layout_constraintEnd_toEndOf="@id/spinnerWheel"
            app:layout_constraintStart_toStartOf="@id/spinnerWheel" />

        <!-- Stationary "GO!" Text -->
        <TextView
            android:id="@+id/goText"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="GO!"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/spinnerWheel"
            app:layout_constraintEnd_toEndOf="@id/spinnerWheel"
            app:layout_constraintStart_toStartOf="@id/spinnerWheel"
            app:layout_constraintTop_toTopOf="@id/spinnerWheel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
