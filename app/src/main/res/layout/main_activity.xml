<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/colorPrimary"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:id="@+id/top_bar"
        android:layout_alignParentTop="true">

        <!-- ImageView for enlarged image -->
        <ImageView
            android:id="@+id/top_bar_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nubjuk"
            android:layout_marginEnd="1dp"
            android:scaleType="centerInside" /> <!-- Scale the image to fit inside the ImageView -->

        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 뭐 먹지"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <!-- Show Roulette Button -->
        <Button
            android:id="@+id/buttonShowRoulette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Roulette"
            android:layout_gravity="top|right" />

    </LinearLayout>


    <!-- 지도 View -->

    <!-- 좌측 하단에 배치할 버튼 -->
    <com.naver.maps.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="70dp"
        />

    <Button
        android:id="@+id/golistbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go List"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />




</FrameLayout>
