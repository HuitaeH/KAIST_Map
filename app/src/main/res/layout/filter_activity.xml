<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 뒤로가기 버튼 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛집 리스트"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리가 보장하는"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카이스트 맛집"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <!-- 버튼과 체크박스가 가로로 나란히 배치 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/allCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="전체"
            android:textColor="#000000"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/checkBoxKorean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="한식"
            android:textColor="#000000"
            android:gravity="center" />


        <CheckBox
            android:id="@+id/checkBoxChinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="중식"
            android:textColor="#000000"
            android:gravity="center" />


        <CheckBox
            android:id="@+id/checkBoxJapanese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="일식"
            android:textColor="#000000"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/checkBoxWestern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="양식"
            android:textColor="#000000"
            android:gravity="center" />


        <CheckBox
            android:id="@+id/checkBoxOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:background="@drawable/rounded_checkbox"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="기타"
            android:textColor="#000000"
            android:gravity="center" />

    </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 해당되는 식당이 없습니다. 텍스트 -->
            <TextView
                android:id="@+id/noDataText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당되는 식당이 없습니다."
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="100dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/round_button_top"
                android:padding="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="지도보기"
                        android:src="@drawable/ic_left_icon"
                        android:scaleType="centerInside"
                        android:alpha="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지도보기"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/round_button_blue">

                    <ImageButton
                        android:id="@+id/buttonShowRoulette"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_roulette"
                        android:background="@null"
                        android:scaleType="centerInside"/>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/golistbutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="찾아보기"
                        android:src="@drawable/ic_right_icon"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="찾아보기"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>


</LinearLayout>



